{
  "info": {
    "name": "EduShare API",
    "description": "API collection for EduShare Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teacher@university.edu.vn\",\n  \"password\": \"password123\",\n  \"full_name\": \"Nguyễn Văn A\",\n  \"role\": \"teacher\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.token) {",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"teacher1@university.edu.vn\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Documents",
      "item": [
        {
          "name": "Get All Documents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents?search=&limit=20&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["documents"],
              "query": [
                {
                  "key": "search",
                  "value": ""
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Get Document by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/documents/:id",
              "host": ["{{baseUrl}}"],
              "path": ["documents", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "document-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Create Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Bài giảng HTML\",\n  \"description\": \"Giới thiệu HTML cơ bản\",\n  \"file_path\": \"/api/uploads/document-1234567890-123456789.pdf\",\n  \"file_type\": \"application/pdf\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/documents",
              "host": ["{{baseUrl}}"],
              "path": ["documents"]
            }
          }
        },
        {
          "name": "Update Document",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Bài giảng HTML - Updated\",\n  \"description\": \"Nội dung mới\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/documents/:id",
              "host": ["{{baseUrl}}"],
              "path": ["documents", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "document-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Document",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents/:id",
              "host": ["{{baseUrl}}"],
              "path": ["documents", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "document-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Track Download",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents/:id/download",
              "host": ["{{baseUrl}}"],
              "path": ["documents", ":id", "download"],
              "variable": [
                {
                  "key": "id",
                  "value": "document-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Teacher Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents/teacher/stats",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "teacher", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/uploads/upload",
              "host": ["{{baseUrl}}"],
              "path": ["uploads", "upload"]
            }
          }
        },
        {
          "name": "Download File",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/uploads/:filename",
              "host": ["{{baseUrl}}"],
              "path": ["uploads", ":filename"],
              "variable": [
                {
                  "key": "filename",
                  "value": "document-1234567890-123456789.pdf"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Conversion",
      "item": [
        {
          "name": "Convert TXT to PDF",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/convert/txt-to-pdf?filePath=/api/uploads/file.txt",
              "host": ["{{baseUrl}}"],
              "path": ["convert", "txt-to-pdf"],
              "query": [
                {
                  "key": "filePath",
                  "value": "/api/uploads/file.txt"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Stats",
      "item": [
        {
          "name": "System Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/stats",
              "host": ["{{baseUrl}}"],
              "path": ["stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/../health",
          "host": ["{{baseUrl}}"],
          "path": ["..", "health"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ]
}
